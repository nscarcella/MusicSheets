{
  "name": "musicsheets",
  "version": "1.0.0",
  "description": "Google Apps Script for music chord sheets with auto-transposition",
  "scripts": {
    "build": "tsc && cp appsscript.json dist/appsscript.json",
    "push": "npm run build && clasp push",
    "watch": "tsc --watch",
    "deploy": "npm run build && clasp push && clasp deploy",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.2",
    "@google/clasp": "^2.4.2",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/google-apps-script": "^1.0.83",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.51.0",
    "vitest": "^4.0.16"
  }
}
